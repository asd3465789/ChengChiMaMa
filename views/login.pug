extends layout

block content
  h2.page-header 登入
  form(method='POST', action='/users/login')
    .form-group
      label 使用者名稱
      input.form-control(name='username', type='text', placeholder='輸入使用者名稱')
    .form-group
      label 密碼
      input.form-control(name='password', type='password', placeholder='輸入密碼')
    input.btn.btn-primary(type ='submit', name = 'submit', value='登入')
